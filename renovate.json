{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignoreDeps": [
    "openjdk",
    "gradle",
    "spring-boot",
    "discord4j"
  ],
  "extends": [
    "group:monorepos",
    "group:recommended",
    "packages:react",
    "workarounds:all",
    ":dependencyDashboard"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "kotlin",
      "matchPackageNames": [
        "/^org\\.jetbrains\\.kotlin/",
        "/^com\\.google\\.devtools\\.ksp/"
      ]
    }
  ],
  "git-submodules": {
    "enabled": true
  }
}